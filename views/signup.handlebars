<div class="container bg-light">
    <div class="py-5 text-center">
    <h2>Create an account</h2>
    </div>
    <div class="row justify-content-center align-items-center">
    <div class="col-md-8">
        <form class="needs-validation" id="signupForm">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="country">Title</label>
                <select class="custom-select d-block w-100 title-btn" id="title" name="title">
                    <option value="">Choose...</option>
                    <option value="Mr">Mr</option>
                    <option value="Mrs">Mrs</option>
                    <option value="Ms">Ms</option>
                    <option value="Miss">Miss</option>
                </select>
        
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label for="firstName">First name</label>
                <input type="text" name="firstname" class="form-control" id="input-firstName" placeholder="" value="">
            </div>
            <div class="col-md-6 mb-3">
                <label for="lastName">Surname</label>
                <input type="text" name="surname" class="form-control" id="input-lastName" placeholder="" value="">
            </div>
        </div>

         <div class="row">
            <div class="col-md-12">
                 <label for="DOB">Date of Birth</label>
            </div>
            <div class="col-md-3 mb-3">
            <input type="text" name="day" class="form-control" id="dobSelectorDay" placeholder="DD">
            </div>
            <div class="col-md-3 mb-3">
            <input type="text" name="month" class="form-control" id="dobSelectorMonth" placeholder="MM">
            
            </div>
            <div class="col-md-3 mb-3">
            <input type="text" name="year" class="form-control" id="dobSelectorYear" placeholder="YYYY">
          
            </div>
         </div>
       <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="email"><span>Email </span></label>
                    <input type="email" name="email" class="form-control" id="input-email" placeholder="you@example.com">
                </div>
           </div>
       </div>
        
        <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="mobile">Mobile</label>
                    <div class="input-group">
                      <input type="text" name="mobile" class="form-control" id="input-mobile" placeholder="e.g 07730 435781">
                    </div>
                </div>
             </div>
        </div>

       <div class="row">
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="address">Address</label>
                    <input type="text" name="address" class="form-control" id="input-address" placeholder="e.g. 1234 Main St BB11 7GN">
                </div>
            </div>
        </div>

        <div class="row">
             <div class="col-md-8">
                <div class="mb-3">
                    <label for="username">Username</label>
                
                    <input type="text" name="username" class="form-control" id="input-username" placeholder="Username">
                   
                </div>
            </div>
         </div>

         <div class="row">
              <div class="col-md-8">
                <div class="mb-3">
                    <label for="password">Password</label>
                
                    <input type="password" name="password" class="form-control" id="input-password" placeholder="*******">
                </div>
            </div>
         </div>

         <div class="row">
           <div class="col-md-8">
            <div class="mb-3">
                <label for="question">Security Question</label>
                <select class="custom-select d-block w-100" name="question" id="input-challenge">
                    <option value="">Choose...</option>
                    <option value="1">Mother's maiden name</option>
                    <option value="2">My favourite player</option>
                    <option value="3">My first car</option>
                    <option value="4">My first pets name</option>
                </select>
            </div>
        </div>
        </div>
        <div class="row">
          <div class="col-md-8">
            <div class="mb-3">
            <label for="username">Answer</label>
           
            <input type="text" name="answer" class="form-control" id="input-response" placeholder="Answer">
           </div>
        </div>
       </div>

        <div class="row">
            <div class="col-md-8">
               
                <select class="custom-select d-block w-100" name="currency"id="input-currency">
                    <option value="">Choose...</option>
                    <option value="GBP" selected="selected">GPB</option>
                    <option value="DOL">Dollar</option>
                    <option value="EUR">EUR</option>
                </select>
              
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
            <div class="mb-3">
            <label for="promo code">Promo Code</label>
            <input type="text" class="form-control" name="promo_code" id="input-promoCode" placeholder="Code..">
         </div>
         </div>
        </div>

        <div class="form-check">
        <label class="form-check-label">
            <input type="checkbox" name="tc" class="form-check-input" id="input-term-conditions">
            <span class="custom-control-description">Accept terms and conditions</span>
        </label>
       </div>
     
        <h6 class="mb-3">Deposit Limit</h6>
         <div class="custom-control custom-checkbox">
            <input type="checkbox" name="deposit_limit" class="custom-control-input" id="input-set-deposit">
            <label class="custom-control-label" for="deposit">Set deposit limit</label>
        </div>


         <div class="custom-control custom-checkbox">
            <input type="checkbox" name="subscribe" class="custom-control-input" id="input-subscribe">
            <label class="custom-control-label" for="subscribe">I want to receive free bets, bonuses & exclusive offer news from: </label>
        </div>

    
        <hr class="mb-4">
        <button class="btn btn-primary btn-lg btn-block" id="btn-join" type="submit">Agree & Join</button>
        </form>
    </div>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
  
    </footer>
</div>